{
  "info": {
    "_postman_id": "contatos-api-collection",
    "name": "Contatos API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost/contatos-api", "type": "string" },
    { "key": "apiKey", "value": "MINHA_API_KEY_TESTE_12345", "type": "string" }
  ],
  "item": [
    { "name": "Listar contatos", "request": { "method": "GET", "header": [], "url": { "raw": "{{baseUrl}}/api/contatos", "host": ["{{baseUrl}}"], "path": ["api","contatos"] } } },
    { "name": "Obter contato", "request": { "method": "GET", "header": [{"key":"X-API-KEY","value":"{{apiKey}}"}], "url": { "raw": "{{baseUrl}}/api/contatos/1", "host": ["{{baseUrl}}"], "path": ["api","contatos","1"] } } },
    { "name": "Criar contato", "request": { "method": "POST", "header": [{"key":"Content-Type","value":"application/json"},{"key":"X-API-KEY","value":"{{apiKey}}"}], "body": { "mode": "raw", "raw": "{\n  \"nome\": \"Teste Postman\",\n  \"email\": \"teste@example.com\",\n  \"telefone\": \"11999999999\",\n  \"mensagem\": \"Mensagem de teste\"\n}" }, "url": { "raw": "{{baseUrl}}/api/contatos", "host": ["{{baseUrl}}"], "path": ["api","contatos"] } } },
    { "name": "Atualizar contato", "request": { "method": "PUT", "header": [{"key":"Content-Type","value":"application/json"},{"key":"X-API-KEY","value":"{{apiKey}}"}], "body": { "mode": "raw", "raw": "{\n  \"nome\": \"Atualizado Postman\",\n  \"email\": \"atualizado@example.com\"\n}" }, "url": { "raw": "{{baseUrl}}/api/contatos/1", "host": ["{{baseUrl}}"], "path": ["api","contatos","1"] } } },
    { "name": "Deletar contato", "request": { "method": "DELETE", "header": [{"key":"X-API-KEY","value":"{{apiKey}}"}], "url": { "raw": "{{baseUrl}}/api/contatos/1", "host": ["{{baseUrl}}"], "path": ["api","contatos","1"] } } },
    { "name": "Buscar por nome", "request": { "method": "GET", "header": [], "url": { "raw": "{{baseUrl}}/api/buscar?nome=Jo", "host": ["{{baseUrl}}"], "path": ["api","buscar"], "query": [{"key":"nome","value":"Jo"}] } } }
  ]
}
